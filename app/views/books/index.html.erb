<p class="error_alert"><%= flash.now[:alert] %></p>
<% if @book.errors.any? %>
			<div id="error_explanation">
				<h3><%= @book.errors.count %>error prohibited this obj from being saved:</h3>
				<ul>
					<% @book.errors.full_messages.each do |message| %>
					<li><%= message %></li>
					<% end %>
				</ul>
			</div>
<% end %>

<div class="container">
	<div class="row">
		<div class="col-xs-3">

			<h2>User info</h2>
			<%= render 'users/profile', user: current_user %>

			<h2>New book</h2>
			<%= render 'books/newform', book: @book %>
			<%= link_to 'csvエクスポート', books_path(format: :csv), class: 'btn btn-success' %>


		</div>

		<div class="col-xs-9">
			<h2>Books index</h2>
			<!--books一覧 -->
			<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th></th>
						<th>タイトル</th>
						<th>本文</th>
						<th>画像</th>
						<th></th>
					</tr>
				</thead>

				<tbody class="new_book">
					<% @books.each do |book| %>
					  <%= render 'books/index', book: book %>
					<% end %>
				</tbody>
			</table>

			<!--books一覧 -->


		</div>
	</div>
</div>